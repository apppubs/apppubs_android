<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <item name="appDefaultColor">@color/app_default</item>
        <item name="android:buttonStyle">@style/ButtonBlue</item>
        <item name="appDefaultTextColor">@color/app_default</item>
        <item name="appSlideMenuBg">@drawable/slidemenu_bg_blue</item>
    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <item name="appDefaultColor">@color/app_default_r</item>
        <item name="android:buttonStyle">@style/ButtonRed</item>
        <item name="appDefaultTextColor">@color/app_common_text_r</item>
        <item name="appSlideMenuBg">@drawable/slidemenu_bg_r</item>
    </style>

    <style name="AppThemeIndigo" parent="AppTheme">
        <item name="appDefaultColor">@color/app_default_i</item>
        <item name="android:buttonStyle">@style/ButtonBlue</item>
        <item name="appDefaultTextColor">@color/app_default_i</item>
        <item name="appSlideMenuBg">@drawable/slidemenu_bg_indigo</item>
    </style>

    <style name="AppThemeBrown" parent="AppTheme">
        <item name="appDefaultColor">@color/app_default_brown</item>
        <item name="android:buttonStyle">@style/ButtonBlue</item>
        <item name="appDefaultTextColor">@color/app_default_brown</item>
        <item name="appSlideMenuBg">@drawable/slidemenu_bg_brown</item>
    </style>

    <!-- button styles -->
    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/sel_com_btn_r</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">50dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonBlue" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/sel_com_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">50dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="ButtonWhiteText" parent="@android:style/Widget.Button">
        
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">50dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="common_title_IV_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@drawable/top_back_btn</item>
    </style>

    <style name="common_title_TV_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="common_title_TV_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/ic_but_bg</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:background">#00000000</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="item_menu_lv">
        <item name="android:paddingLeft">@dimen/item_padding_left</item>
        <item name="android:paddingRight">@dimen/item_padding_right</item>
        <item name="android:paddingTop">@dimen/item_padding_top</item>
        <item name="android:paddingBottom">@dimen/item_padding_bottom</item>
        <item name="android:background">@drawable/sel_common_item</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>
	 <style name="item_menu_lv_withpic">
        <item name="android:paddingLeft">@dimen/item_padding_left</item>
        <item name="android:paddingRight">@dimen/item_padding_right</item>
        <item name="android:paddingTop">@dimen/item_padding_top_narrow</item>
        <item name="android:paddingBottom">@dimen/item_padding_bottom_narrow</item>
        <item name="android:background">@drawable/sel_common_item</item>
    </style>
    <style name="item_with_narrow_padding">
        <item name="android:paddingLeft">@dimen/item_padding_left_narrow</item>
        <item name="android:paddingRight">@dimen/item_padding_right_narrow</item>
        <item name="android:paddingTop">@dimen/item_padding_top_narrow</item>
        <item name="android:background">@drawable/sel_common_item</item>
    </style>
    <style name="item_with_padding">
        <item name="android:paddingLeft">@dimen/item_padding_left</item>
        <item name="android:paddingRight">@dimen/item_padding_right</item>
        <item name="android:paddingTop">@dimen/item_padding_top</item>
        <item name="android:background">@drawable/sel_common_item</item>
    </style>

    <style name="item_with_left_and_top_padding">
        <item name="android:paddingLeft">@dimen/item_padding_left</item>
        <item name="android:paddingTop">@dimen/item_padding_top</item>
        <item name="android:background">@drawable/sel_common_item</item>
    </style>
    <style name="item_with_top_padding">
        <item name="android:paddingTop">@dimen/item_padding_top</item>
        <item name="android:background">@drawable/sel_common_item</item>
    </style>
    <style name="app_common_edittext">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- popup window 动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>
    <!-- 底部菜单样式下的栏目长按弹出菜单动画 -->
    <style name="popwin_channel_anim_style">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- 下载圆形进度 -->
    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">3dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#ffffffff</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">3dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#aaa</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@android:color/white</item>
        <item name="android:fullDark">@android:color/white</item>
        <item name="android:topBright">@android:color/white</item>
        <item name="android:topDark">@android:color/white</item>
    </style>

    <style name="dialogWait" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">2dp</item>
        <item name="android:windowBackground">@drawable/confirm_bg</item>
    </style>
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>