<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mportal="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <com.mportal.client.widget.TitleBar
        android:id="@+id/wethwe_tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/appDefaultColor"
        mportal:leftImgSrc="@drawable/top_back_btn"
        mportal:mTitle="主要城市"
        mportal:titleSize="@dimen/title_text_size" >
    </com.mportal.client.widget.TitleBar>

    <ListView
        android:id="@+id/w_city_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wethwe_tb"
        android:layout_marginTop="-3.0dip"
        android:background="@android:color/white"
        android:cacheColorHint="#fff"
        android:divider="@drawable/list_line"
        android:dividerHeight="0.5dip"
        android:fadingEdgeLength="1.0px"
        android:headerDividersEnabled="false" />

    <LinearLayout
        android:id="@+id/wethwe_progress_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical"
         >

        <ProgressBar
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>