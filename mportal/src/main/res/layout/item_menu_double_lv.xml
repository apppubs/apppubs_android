<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <!-- 包含两个菜单的子菜单选项 -->

    <LinearLayout
        android:id="@+id/menu_ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/sel_common_item"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/menu_iv1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside" />

            <View
                android:id="@+id/menu_reddot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignRight="@id/menu_iv1"
                android:layout_alignTop="@id/menu_iv1"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/dot_red" />
        </RelativeLayout>

        <TextView
            android:id="@+id/menu_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="菜单"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:id="@+id/menu_split_v"
        android:layout_width="1px"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@color/common_divider" />

    <LinearLayout
        android:id="@+id/menu_ll2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_common_item"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/menu_iv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside" />

            <View
                android:id="@+id/menu_reddot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignRight="@id/menu_iv2"
                android:layout_alignTop="@id/menu_iv2"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/dot_red" />
        </RelativeLayout>

        <TextView
            android:id="@+id/menu_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="菜单"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>