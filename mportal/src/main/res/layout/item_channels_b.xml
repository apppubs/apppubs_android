<?xml version="1.0" encoding="utf-8"?>
<com.mportal.client.view.RatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_divider"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/channels_gv_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sel_common_item"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/channels_gv_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingBottom="35dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/channels_gv_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="栏目"
            android:textColor="#333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/menu_reddot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/channels_gv_iv"
            android:layout_alignTop="@id/channels_gv_iv"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/dot_red"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="14dp" 
            android:visibility="gone"
            />
    </RelativeLayout>

    <View
        android:id="@+id/channel_gv_layer_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

</com.mportal.client.view.RatioLayout>