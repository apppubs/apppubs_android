<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_with_top_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/left_arrow" />

    <TextView
        android:id="@+id/org_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/arr"
        android:text="共12人"
        android:textColor="@color/common_text_gray_light"
        android:textSize="@dimen/item_text_size_small" />

    <TextView
        android:id="@+id/org_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/org_item_count_tv"
        android:paddingLeft="@dimen/item_padding_left"
        android:textColor="@color/common_text"
        android:textSize="@dimen/item_text_size" >
    </TextView>

    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding_bottom"
        android:layout_below="@+id/org_item_name_tv" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/blank"
        android:layout_marginLeft="@dimen/item_padding_left"
        android:background="@color/common_divider" />

    <View
        android:id="@+id/line_longer"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/blank"
        android:background="@color/common_divider" />

</RelativeLayout>