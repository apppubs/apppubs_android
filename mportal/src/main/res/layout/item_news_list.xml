<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/item_with_narrow_padding"
     >
     <View 
         android:layout_width="match_parent"
         android:layout_height="85dp"
         />
    <ImageView 
        android:id="@+id/news_iv"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_image_height"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/news_title_tv"
        android:layout_toRightOf="@id/news_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:singleLine="false"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="#333"
        android:textSize="16dp" />
 
	
	<TextView 
	    android:id="@+id/news_pubtime_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignLeft="@id/news_title_tv"
	    android:textSize="13dp"
	    android:textColor="#A8A8A8"
		android:paddingBottom="20dp"	    
	    />
	<TextView 
	    android:id="@+id/news_commentnum_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@id/news_pubtime_tv"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="12dp"
	    android:textSize="13dp"
	    android:textColor="#A8A8A8"
	    android:paddingRight="1px"
	    android:paddingLeft="5px"
	    android:paddingBottom="20dp"
	    />
	<TextView 
	    android:id="@+id/news_tag_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="45dp"
	    android:paddingLeft="2dp"
	    android:paddingRight="2dp"
	    android:textSize="13dp"
	    android:text="xxx"
	    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_divider"
        />
</RelativeLayout>