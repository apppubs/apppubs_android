<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_send_voice_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/item_padding_right_narrow"
    android:paddingTop="@dimen/item_padding_top_narrow"
    android:paddingBottom="@dimen/item_padding_bottom_narrow"
     >
  <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/save_time_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="2015/2/28"
        android:textColor="@android:color/white"
        android:textSize="12dp" />
  
    <ImageView
        android:id="@+id/chat_icon_right_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_time_tv"
        android:gravity="center_vertical"
        android:src="@drawable/profile_default_icon" />

    <LinearLayout
        android:id="@+id/chat_voice_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/chat_time_tv"
        android:layout_toLeftOf="@id/chat_icon_right_iv"
        android:background="@drawable/chat_messagecontent_bg_right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/chat_voice_length_blank_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="    " />

        <ImageView
            android:id="@+id/chat_voice_sound_right_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/mport_me_haverecord" />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_voice_length_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/chat_voice_right_ll"
        android:layout_marginRight="5dp"
        android:textSize="12dp"
        android:textColor="#333" />

</RelativeLayout>