<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mportal="http://schemas.android.com/apk/res/com.mportal.client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.mportal.client.widget.TitleBar
        android:id="@+id/home_tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/appDefaultColor"
        mportal:leftImgSrc="@drawable/menu_left"
        mportal:rightTextSize="@dimen/title_text_left_right"
        mportal:titleSize="@dimen/title_text_size" >
    </com.mportal.client.widget.TitleBar>

    <FrameLayout
        android:id="@+id/home_container_fgm"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>