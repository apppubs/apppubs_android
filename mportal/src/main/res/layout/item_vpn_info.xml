<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/vpn_item_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        >
        <TextView
            android:id="@+id/item_vpn_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国投集团VPN地址"
            android:textSize="@dimen/item_text_size"
            android:textColor="@color/common_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            />
        <ImageView
            android:id="@+id/item_vpn_config_iv"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/vpn_not_config"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="1px"
        android:background="@color/common_divider"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/item_username_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="用户名"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:textColor="@color/common_text_gray"
            />
        <EditText
            android:id="@+id/item_vpn_user_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/item_username_label_tv"
            android:layout_alignBottom="@id/item_username_label_tv"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="请输入用户名"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/item_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/item_username_label_tv"
            android:layout_alignLeft="@id/item_username_label_tv"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            android:textColor="@color/common_text_gray"
            android:padding="5dp"
            android:hint="密码"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/item_vpn_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/item_pwd_tv"
            android:layout_alignLeft="@id/item_vpn_user_et"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:textSize="14dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >
        <Button
            android:id="@+id/item_vpn_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="验证并保存"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/vpn_item_btn_bg"
            />
        <Button
            android:id="@+id/item_vpn_clear_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textSize="13dp"
            android:text="清空配置"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/vpn_item_btn_bg"
            />
    </LinearLayout>

</LinearLayout>