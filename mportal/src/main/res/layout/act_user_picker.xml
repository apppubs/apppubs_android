<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_user_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apppubs.d20.com.apppubs.client.message.activity.UserPickerActivity">

    <com.apppubs.d20.message.widget.Breadcrumb
        android:id="@+id/user_picker_bc"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.apppubs.d20.message.widget.Breadcrumb>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/user_picker_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@drawable/sel_com_list"></ListView>

        <TextView
            android:id="@+id/user_picker_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="没有人员!"
            android:textColor="@color/common_text"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider" />

    <com.apppubs.d20.message.widget.UserSelectionBar
        android:id="@+id/user_picker_user_selection_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.apppubs.d20.message.widget.UserSelectionBar>
</LinearLayout>
