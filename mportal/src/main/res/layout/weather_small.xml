<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_left_weather" >

    <ImageView
        android:id="@+id/weather_im"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/biz_pc_plugin_weather_xiaoxue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_toRightOf="@id/weather_im"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/weather_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/1℃"
            android:lineSpacingMultiplier="0.9"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/weather_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.9"
            android:text="北京"
            android:textColor="@android:color/white"
            android:textSize="11dp" />
    </LinearLayout>

</RelativeLayout>