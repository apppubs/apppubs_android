<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mportal="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
	<ImageView 
	    android:id="@+id/login_bg_iv"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="fitXY"
	    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dip"
            android:background="@drawable/input_bg"
            android:hint="用户名"
            android:padding="10dp"
            android:textSize="14dp"
            android:windowSoftInputMode="stateHidden" />

        <RelativeLayout
            android:id="@+id/mima"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="14sp"
                android:windowSoftInputMode="stateHidden" />

            <Button
                android:id="@+id/login_wangjipassword"
                android:layout_width="92dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:background="@color/login_btn_bg"
                android:onClick="onClick"
                android:visibility="gone"
                android:text="忘记密码？"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip" >

   <!--          <Button
                android:id="@+id/login_register"
                android:layout_width="92dip"
                android:layout_height="wrap_content"
                android:background="#e0e0e0"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:textColor="#333"
                android:text="注册"
                android:textSize="14dp" /> -->

            <Button
                android:id="@+id/login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="登录"
                android:onClick="onClick"
                android:textColor="#fff"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            >
            <TextView
                android:id="@+id/login_forget_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:textSize="13dp"
                android:textColor="@color/common_text_gray_light"
                android:visibility="gone"
                android:onClick="onClick"
                android:clickable="true"
                android:text="忘记密码？"
                ></TextView>
            
              <TextView
                android:id="@+id/login_reg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/common_text_gray_light"
                android:padding="5dp"
                android:text="注册"
                android:visibility="gone"
                android:onClick="onClick"
                android:clickable="true"
                android:textSize="13dp"
                ></TextView>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>