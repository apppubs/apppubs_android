<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_common_bg"
    tools:context="com.apppubs.d20.com.apppubs.message.activity.FilePickerLocalActivity">

    <com.apppubs.ui.widget.Breadcrumb
        android:id="@+id/file_picker_local_breadcrumb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        ></com.apppubs.ui.widget.Breadcrumb>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:id="@+id/file_picker_local_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            ></ListView>
        <LinearLayout
            android:id="@+id/file_picker_local_empty_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/folder_empty"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="文件夹为空"
                android:textColor="@color/common_text_gray_light"
                android:textSize="14dp"
                />
        </LinearLayout>
    </FrameLayout>
    <com.apppubs.ui.widget.FileSelectionBar
        android:id="@+id/file_picker_local_fileselectionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></com.apppubs.ui.widget.FileSelectionBar>
</LinearLayout>
