<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_common_item"
    >
    <FrameLayout
        android:id="@+id/file_picker_local_selector_fl"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/file_picker_local_selector_iv"
            android:layout_width="30dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/sel_checkable_btn"
            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/file_picker_local_left_fl"
        style="@style/item_menu_lv_withpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/file_picker_local_selector_fl"
        >

        <ImageView
            android:id="@+id/file_picker_local_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/file_picker_local_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/file_picker_local_iv"
            android:textColor="@color/common_text"
            android:textSize="@dimen/item_text_size"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider"
        ></View>

</RelativeLayout>
