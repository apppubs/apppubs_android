<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_bg" >


    <HorizontalScrollView
        android:id="@+id/collect_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/collect_hsv_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/collection_line"
        android:layout_width="200dp"
        android:layout_height="2dip"
        android:layout_below="@id/collect_hsv"
        android:background="?attr/appDefaultTextColor" />
 
    <com.apppubs.d20.widget.NoScollViewparge
        android:id="@+id/collection_viewparge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/collection_line" >
    </com.apppubs.d20.widget.NoScollViewparge>

</RelativeLayout>