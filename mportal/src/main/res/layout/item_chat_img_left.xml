<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_send_img_other"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/item_padding_bottom_narrow"
    android:paddingLeft="@dimen/item_padding_left_narrow"
    android:paddingTop="@dimen/item_padding_top_narrow" >

    <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/save_time_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="2015/2/28"
        android:textColor="@android:color/white"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/chat_icon_left_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/chat_time_tv"
        android:gravity="center_vertical"
        android:src="@drawable/profile_default_icon" />

    <TextView
        android:id="@+id/chat_content_left_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_time_tv"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/chat_icon_left_iv"
        android:text="姓名"
        android:textColor="@color/common_text_gray"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/chat_img_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_content_left_name_tv"
        android:layout_toRightOf="@id/chat_icon_left_iv"
        android:background="@drawable/chat_messagecontent_bg_left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chat_img_left_iv"
            android:layout_width="100dp"
            android:layout_height="155dp"
            android:scaleType="fitCenter"
            android:src="@drawable/transparent" />
    </LinearLayout>

</RelativeLayout>