<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/item_padding_bottom_narrow"
    android:paddingRight="@dimen/item_padding_right_narrow"
    android:paddingTop="@dimen/item_padding_top_narrow" >

      <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/save_time_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="2015/2/28"
        android:textColor="@android:color/white"
        android:textSize="12dp" />
    
    <ImageView
        android:id="@+id/chat_icon_right_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_time_tv"
        android:gravity="center_vertical"
        android:src="@drawable/profile_default_icon" />

    <TextView
        android:id="@+id/chat_content_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_time_tv"
        android:layout_toLeftOf="@id/chat_icon_right_iv"
        android:background="@drawable/chat_messagecontent_bg_right"
        android:maxWidth="220dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:text="了撒啊的收费了接口连接"
        android:textColor="#fff"
        android:textSize="13dp" />

    <ProgressBar
        android:id="@+id/chat_wait_pb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/chat_content_right_tv"
        android:visibility="gone"
         />

</RelativeLayout>