<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_common_item"
    android:paddingLeft="@dimen/item_padding_left"
    android:paddingTop="@dimen/item_padding_top_narrow" >

    <com.mportal.client.widget.CircularImage
        android:id="@+id/item_service_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/service_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="28dp"
        android:layout_toRightOf="@id/item_service_pic"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/item_service_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/common_text_gray"
            android:textSize="@dimen/item_text_size_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_service_flag"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginRight="8dp"
        android:src="@drawable/auth_follow_cb" />

    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding_bottom_narrow"
        android:layout_below="@id/service_lay" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/blank"
        android:background="@color/common_divider" />

</RelativeLayout>