<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/people_layi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_padding_right"
        android:background="@drawable/input_bg"
        android:orientation="vertical"
        android:paddingLeft="6dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="用  户  名 :"
                android:textColor="@color/common_text"
                android:textSize="@dimen/item_text_size" />

            <EditText
                android:id="@+id/people_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:editable="false"
                android:hint="无"
                android:padding="10dp"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_bar_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="电子邮箱 :"
                android:textColor="@color/common_text"
                android:textSize="@dimen/item_text_size" />

            <EditText
                android:id="@+id/people_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:editable="false"
                android:hint="无"
                android:padding="10dp"
                android:textSize="12dp"
                android:windowSoftInputMode="stateHidden" />
        </LinearLayout>

        <View
            android:id="@+id/usercenter_pwd_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_bar_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="昵        称 :"
                android:textColor="@color/common_text"
                android:textSize="@dimen/item_text_size" />

            <EditText
                android:id="@+id/people_nicname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:editable="false"
                android:hint="无"
                android:padding="10dip"
                android:textSize="@dimen/item_text_size_small"
                android:windowSoftInputMode="stateHidden" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_bar_bg" />

        <LinearLayout
            android:id="@+id/people_layir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="手  机   号 :"
                android:textColor="@color/common_text"
                android:textSize="@dimen/item_text_size" />

            <EditText
                android:id="@+id/people_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:editable="false"
                android:hint="无"
                android:padding="10dip"
                android:textSize="@dimen/item_text_size_small"
                android:windowSoftInputMode="stateHidden" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/people_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/people_layi"
        android:layout_marginLeft="@dimen/item_padding_left"
        android:layout_marginRight="@dimen/item_padding_right"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>