<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/item_padding_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="原密码  :"
            android:textColor="@color/common_text"
            android:textSize="@dimen/item_text_size" />

        <EditText
            android:id="@+id/change_password_original_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textSize="@dimen/item_text_size"
            android:windowSoftInputMode="stateHidden" />
    </LinearLayout>

    <View
        android:id="@+id/usercenter_pwd_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_bar_bg" />

    <LinearLayout
        android:id="@+id/peoplecenter_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="新密码  :"
            android:textColor="@color/common_text"
            android:textSize="@dimen/item_text_size" />

        <EditText
            android:id="@+id/change_password_new_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textSize="@dimen/item_text_size"
            android:windowSoftInputMode="stateHidden" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_bar_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="重复密码  :"
            android:textColor="@color/common_text"
            android:textSize="@dimen/item_text_size" />

        <EditText
            android:id="@+id/change_password_new_repeat_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请重复新密码"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textSize="@dimen/item_text_size"
            android:windowSoftInputMode="stateHidden" />
    </LinearLayout>

</LinearLayout>